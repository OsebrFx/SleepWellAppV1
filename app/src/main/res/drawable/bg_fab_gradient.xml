<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/shadow_strong" />
        </shape>
    </item>
    
    <!-- Gradient FAB -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/accent_purple"
                android:endColor="@color/accent_pink"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
